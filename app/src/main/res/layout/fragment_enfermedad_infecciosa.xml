<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnfermedadInfecciosaFragment"
    android:background="@drawable/backgroud">


    <ListView
        android:id="@+id/listViewInfeciosa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


    </ListView>

    <TextView
        android:id="@+id/textViewInfeciosa"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="2" />

    <Button
        android:id="@+id/buttonMasIfeccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mas enfermedades"
        android:layout_marginTop="2in"
        android:textAllCaps="false"
        android:layout_marginLeft="1in"/>


</FrameLayout>